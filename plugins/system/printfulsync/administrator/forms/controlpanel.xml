            filter="STRING"
            required="true"
        />
        <field
            name="store_id"
            type="text"
            label="PLG_SYSTEM_PRINTFULSYNC_STORE_ID_LABEL"
            description="PLG_SYSTEM_PRINTFULSYNC_STORE_ID_DESC"
            filter="STRING"
            required="true"
        />
        <field
