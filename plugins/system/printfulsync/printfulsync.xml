<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade" version="5.0">
  <name>plg_system_printfulsync</name>
  <version>1.1.0</version>
  <description>Printful Sync â€“ Admin via com_ajax (keine eigene com_)</description>

  <files>
    <filename plugin="printfulsync">printfulsync.php</filename>
    <folder>administrator</folder>
    <folder>media</folder>
    <folder>language</folder>
  </files>

  <media destination="plg_system_printfulsync" folder="media">
    <folder>js</folder>
    <folder>css</folder>
  </media>

  <languages>
    <language tag="en-GB">language/en-GB/plg_system_printfulsync.ini</language>
    <language tag="de-DE">language/de-DE/plg_system_printfulsync.ini</language>
  </languages>

  <resources>
    <file type="style"  name="plg.printfulsync.admin" path="plg_system_printfulsync/css/admin.css"/>
    <file type="script" name="plg.printfulsync.admin" path="plg_system_printfulsync/js/admin.js"/>
  </resources>

  <config>
    <fields name="params">
      <fieldset name="basic" label="PLG_PFS_PARAMS">
        <field name="api_key" type="password" label="PLG_PFS_API_KEY" filter="raw"/>
        <field name="only_parent_in_visible" type="radio" default="1" label="PLG_PFS_ONLY_PARENT_VISIBLE">
          <option value="1">JYES</option><option value="0">JNO</option>
        </field>
        <field name="hidden_category_id" type="number" default="0" label="PLG_PFS_HIDDEN_CAT_ID"/>
      </fieldset>
    </fields>
  </config>
</extension>
