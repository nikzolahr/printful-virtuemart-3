        />
        <field
            name="value_map_size"
            type="textarea"
            label="PLG_SYSTEM_PRINTFULSYNC_VALUE_MAP_SIZE_LABEL"
            description="PLG_SYSTEM_PRINTFULSYNC_VALUE_MAP_SIZE_DESC"
